#include <stm32f4_discovery.h>
#include <os.h>

sem_t sem;
tsk_t sla; OS_STK(sla_stk);
tsk_t mas; OS_STK(mas_stk, 512);

void slave()
{
	sem_wait(&sem);
	LED_Tick();
}

void master()
{
	tsk_delay(SEC);
	sem_give(&sem);
}

int main()
{
	LED_Init();

	sem_init(&sem, 0, semBinary);
	tsk_init(&sla, slave,  sla_stk, sizeof(sla_stk));
	tsk_init(&mas, master, mas_stk, sizeof(mas_stk));
	tsk_stop();
}
