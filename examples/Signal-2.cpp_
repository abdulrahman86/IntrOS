#include <stm32f4_discovery.h>
#include <os.h>

auto led = Led();
auto sig = Signal();

void slave()
{
	unsigned x;

	for (;;)
	{
		x = sig.wait(sigAll);
		led = SIGSET(x);
	}
}

void master()
{
	unsigned x = 0;

	for (;;)
	{
		ThisTask::sleepFor(SEC);
		sig.give(x);
		x = (x + 1) % 4;
	}
}

int main()
{
	auto sla = Task::Start(slave);
	auto mas = Task::Start(master);

	ThisTask::sleep();
}
